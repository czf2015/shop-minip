/* components/cancel/cancel.wxss */


.cancel {
  padding: 20rpx;
  width: 44rpx;
  height: 44rpx;
}

.cancelImg {
  width: 100%;
  height: 100%;
}

.cancelHrBox {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
}

.cancelHr {
  position: absolute;
  top: 22rpx;
  left: 11rpx;
  width: 25rpx;
  height: 3rpx;
  background-color: #000;
}

.cancelHrTop {
  transform: rotate(45deg);
}

.cancelHrDown {
  transform: rotate(-45deg);
}
