/* components/right/right.wxss */


.hrBox {
  width: 30rpx;
  height: 30rpx;
}

.hrSide {
  width: 100%;
  height: 100%;
  position: relative;
}

.hr {
  position: absolute;
  width: 50%;
  height: 3rpx;
  background-color: #686868;
  left: 20%;
  border-radius: 2rpx;
}

.leftHr {
  transform: rotate(-48deg);
  top: 69%;
}

.rightHr {
  transform: rotate(48deg);
  top: 32%;
}