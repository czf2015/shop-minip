/* components/board/board.wxss */


.title {
  text-align: center;
  font-size: 38rpx;
  line-height: 1.5;
  color: #000;
  font-family: PingFangSC-Semibold;
}

.board {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 15rpx;
  width: 615rpx;
  height: 88%;
  overflow: hidden;
  border-radius: 14rpx;
  background-color: #fff;
  box-shadow: 0 10rpx 27rpx 0 rgba(0, 0, 0, 0.07);
}

.header {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 615rpx;
  height: 320rpx;
  background: #fafafa;
}

figcaption {
  display: flex;
  flex-direction: column;
  margin-left: 60rpx;
  width: 372rpx;
  min-height: 240rpx;
}

.tip {
  font-size: 26rpx;
  color: #272727;
}

.name {
  font-size: 40rpx;
  line-height: 60rpx;
  font-weight: bold;
  color: #080808;
}

.desc {
  margin: 10rpx 0;
  font-size: 26rpx;
}

icons {
}

.icon {
  margin-left: -7rpx;
  margin-right: 7rpx;
  width: 50rpx;
  height: 50rpx;
}

.figure {
  width: 250rpx;
}

.content {
  flex-grow: 1;
  width: 495rpx;
  background: #fff;
}

.summary {
  margin: 2vh 0 1vh;
  font-size: 34rpx;
  font-weight: bold;
}

.details {
  text-align: justify;
  font-size: 1.8vh;
  line-height: 1.5;
  color: #898989;
}

.link {
}

.footer {
  display: flex;
  align-items: center;
  align-self: flex-start;
  box-sizing: border-box;
  padding-left: 60rpx;
  width: 615rpx;
  height: 7vh;
  background: rgb(239, 239, 239);
}
