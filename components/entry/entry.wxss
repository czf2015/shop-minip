/* components/entry/entry.wxss */
@import "../../css/basic.wxss";


.scroll {
  margin-top: 20rpx;
  height: 252rpx;
  overflow: hidden;
}

.card {
  width: 670rpx;
  height: 252rpx;
  border-radius: 10rpx;
  z-index: 1;
}

.card_left {
  width: 377rpx;
  padding: 40rpx 48rpx 10rpx 30rpx;
}

.card_right {
  padding: 48rpx 0 34rpx;
  border-radius: 0 10rpx 10rpx 0;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2a2a2a;
}

.desc {
  flex-grow: 1;
  margin-top: 10rpx;
  font-size: 22rpx;
  line-height: 1.5;
  font-family: PingFangSC-Regular;
  color: #5e5e5e;
  border-bottom: 2rpx solid #cbcbcb;
}

.price, .dose {
  letter-spacing: -1.8rpx;
  font-size: 22rpx;
  line-height: 2;
  font-family: PingFangSC-Medium;
  color: #2a2a2a;
}

.digit {
  padding-right: 8rpx;
  font-size: 30rpx;
  font-family: DINPro-Medium;
  color: #2a2a2a;
}

.small {
  max-height: 100%;
  width: 158rpx;
}

.remove {
  right: 0;
  width: 158rpx;
  height: 252rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 252rpx;
  font-family: PingFangSC-Medium;
  color: #fff;
  background-color: #f0733d;
  border-radius: 0 10rpx 10rpx 0;
}
