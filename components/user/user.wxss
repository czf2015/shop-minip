/* components/user/user.wxss */


.getUserBtn {
  color: #4a4a4a;
  background-color: #fff;
  border-radius: 4vh;
  box-shadow:1vh 1vh 3vh #ccc;
}

.getUserBtn::after {
  border: none;
}

.account {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 32rpx;
  width: 100vw;
  background-color: #fff;
}

.left {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  flex-grow: 1;
  line-height: 1.7;
}

.username {
  font-family: SourceHanSans;
  font-size: 40rpx;
}

.avatar {
  margin: 25rpx 40rpx 25rpx 88rpx;
  width: 136rpx;
  height: 136rpx;
  border-radius: 110rpx;
  box-shadow: 0 7rpx 10rpx rgba(0, 0, 0, 0.14);
}

.dragonRefer {
  font-family: 'DIN Alternate';
  font-size: 30rpx;
  line-height: 44rpx;
  color: #6f6f6f;
}
